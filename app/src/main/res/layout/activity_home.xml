<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">
    
    <ImageView
        android:scaleType="centerCrop"
        android:src="@drawable/back_home"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
    
    <RelativeLayout
        android:visibility="visible"
        android:id="@+id/btn_active_alert"
        android:layout_centerInParent="true"
        android:layout_width="275dp"
        android:layout_height="275dp">

        <ImageView
            android:src="@drawable/Oval"
            android:layout_centerInParent="true"
            android:layout_width="275dp"
            android:layout_height="275dp" />

        <Button
            android:text="activar\nalerta"
            android:gravity="center"
            android:textAllCaps="true"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_semilarge"
            android:fontFamily="sans-serif-medium"
            android:background="@color/black_00"
            android:layout_centerInParent="true"
            android:layout_width="275dp"
            android:layout_height="275dp" />

    </RelativeLayout>

    <LinearLayout
        android:visibility="gone"
        android:orientation="vertical"
        android:layout_marginLeft="@dimen/dp_seventhbase"
        android:layout_marginRight="@dimen/dp_seventhbase"
        android:id="@+id/alert_sent"
        android:layout_centerInParent="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:textStyle="bold"
            android:text="Enviando alertas"
            android:textSize="@dimen/sp_medium"
            android:gravity="center"
            android:textAllCaps="true"
            android:textColor="@color/colorPrimary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <ProgressBar
            android:progress="45"
            android:progressDrawable="@drawable/custom_progressbar"
            android:layout_marginTop="@dimen/dp_base"
            android:layout_marginBottom="@dimen/dp_base"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_base" />

        <TextView
            android:textStyle="bold"
            android:text="45%"
            android:textSize="@dimen/sp_medium"
            android:gravity="center"
            android:textAllCaps="true"
            android:textColor="@color/colorPrimary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />


    </LinearLayout>

    <LinearLayout
        android:visibility="gone"
        android:orientation="vertical"
        android:layout_marginLeft="@dimen/dp_seventhbase"
        android:layout_marginRight="@dimen/dp_seventhbase"
        android:id="@+id/sending_alert_progress"
        android:layout_centerInParent="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:textStyle="bold"
            android:text="alerta\nenviada"
            android:textSize="@dimen/sp_medium"
            android:gravity="center"
            android:textAllCaps="true"
            android:textColor="@color/colorPrimary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <android.support.v7.widget.AppCompatButton
            android:layout_marginTop="@dimen/dp_fourthbase"
            android:textSize="@dimen/sp_regular"
            android:textColor="@color/white"
            android:fontFamily="sans-serif-medium"
            android:gravity="center"
            android:paddingLeft="@dimen/dp_fourthbase"
            android:paddingRight="@dimen/dp_fourthbase"
            android:text="VER REPORTE DE EMPLEADOS"
            android:backgroundTint="@color/colorPrimary"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_fifthbase" />

    </LinearLayout>

</RelativeLayout>